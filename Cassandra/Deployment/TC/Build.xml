<?xml version="1.0" encoding="utf-8"?>

<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Import Project="Common.xml" />

    <Target Name="Build">
        <Error Condition="'$(SolutionDir)' == ''" Text="SolutionDir is not defined" />
        <MSBuild Projects="$(SolutionDir)Cassandra.sln" Properties="Configuration=$(Configuration);SolutionDir=$(SolutionDir)" Targets="Clean;Rebuild" />
    </Target>
</Project>