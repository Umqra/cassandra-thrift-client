<?xml version="1.0" encoding="utf-8"?>

<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <UsingTask Condition="'$(teamcity_dotnet_nunitlauncher_msbuild_task)' != ''" TaskName="NUnit" AssemblyFile="$(teamcity_dotnet_nunitlauncher_msbuild_task)" />

    <PropertyGroup>
        <SolutionDir Condition="'$(SolutionDir)' == '' And '$(RootDir)' != ''">$(RootDir)CassandraClient\Cassandra\</SolutionDir>
        <DeployDir Condition="'$(DeployDir)' == '' And '$(SolutionDir)' != ''">
            $(SolutionDir).deploy\
        </DeployDir>
        <AssembliesPath>$(SolutionDir)..\Assemblies\</AssembliesPath>
        <FunctionalTestsSolutionDir>$(SolutionDir)..\FunctionalTests\</FunctionalTestsSolutionDir>
        <Configuration Condition="'$(Configuration)' == ''">Debug</Configuration>
    </PropertyGroup>
</Project>